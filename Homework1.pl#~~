% Rules
son(X, Y) :-
    parent(Y, X), male(X).

daughter(X, Y) :-
    parent(Y, X), female(X).

mother(X, Y) :-
    parent(X, Y), female(X).

father(X, Y) :-
    parent(X, Y), male(X).

brother(X, Y) :-
    parent(Z, X), parent(Z, Y), male(X), X \= Y.

sister(X, Y) :- parent(Z, X), parent(Z, Y), female(X), X \= Y.

grandmother(X, Y) :- parent(X, Z), parent(Z, Y), female(X).
grandfather(X, Y) :- parent(X, Z), parent(Z, Y), male(X).

grandson(X, Y) :- grandparent(Y, X), male(X).
granddaughter(X, Y) :- grandparent(Y, X), female(X).

grandparent(X, Y) :- parent(X, Z), parent(Z, Y).

% Maternal and Paternal Grandparents
matGrandma(X, Y) :- mother(Z, Y), mother(X, Z).
patGrandma(X, Y) :- father(Z, Y), mother(X, Z).
matGrandpa(X, Y) :- mother(Z, Y), father(X, Z).
patGrandpa(X, Y) :- father(Z, Y), father(X, Z).

% Aunts and Uncles
aunt(X, Y) :- sister(X, Z), parent(Z, Y).
aunt(X, Y) :- wife(X, Z), brother(Z, W), parent(W, Y).
uncle(X, Y) :- brother(X, Z), parent(Z, Y).
uncle(X, Y) :- husband(X, Z), sister(Z, W), parent(W, Y).

% Nieces and Nephews
niece(X, Y) :- parent(Z, X), sibling(Z, Y), female(X).
nephew(X, Y) :- parent(Z, X), sibling(Z, Y), male(X).

% Additional Helper Rules
sibling(X, Y) :- parent(Z, X), parent(Z, Y), X \= Y.
wife(X, Y) :- married(X, Y), female(X).
husband(X, Y) :- married(X, Y), male(X).










